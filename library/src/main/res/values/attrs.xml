<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MagicTabLayout">
        <attr name="bgColor" format="color" />
        <attr name="bgImage" format="reference" />
        <attr name="selectDrawable" format="reference" />
        <attr name="normalTextColor" format="color" />
        <attr name="selectTextColor" format="color" />
        <attr name="titleIconDrawable" format="reference" />
        <attr name="titleIconPadding" format="dimension" />
        <attr name="animateSelected" format="boolean" />
        <attr name="normalTextSize" format="dimension" />
        <attr name="selectedTextSize" format="dimension" />
        <attr name="gapSize" format="dimension" />
        <attr name="topRadius" format="dimension" />
        <attr name="bottomRadius" format="dimension" />
        <attr name="bottomSpace" format="dimension" />
        <attr name="holoColor" format="color" />
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

    </declare-styleable>
</resources>